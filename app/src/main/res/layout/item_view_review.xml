<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_author"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_author_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/author"
        android:textSize="15sp"
        android:layout_marginStart="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_author"
        app:layout_constraintTop_toTopOf="@id/img_author"/>

    <TextView
        android:id="@+id/tv_item_review"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="@string/reviews"
        app:layout_constraintTop_toBottomOf="@id/tv_author_review"
        app:layout_constraintStart_toStartOf="@id/tv_author_review"/>
</androidx.constraintlayout.widget.ConstraintLayout>